{% extends 'base.html.twig' %}

{% block title %}Mes fichiers{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Mes fichiers</h1>

        <!-- Formulaire de filtre -->
        <form method="get" action="{{ path('app_file_index') }}" class="row g-3 mb-4">
            <div class="col-md-4">
                <label for="name" class="form-label">Rechercher par nom:</label>
                <input type="text" name="name" id="name" class="form-control" value="{{ name }}" placeholder="Nom du fichier" />
            </div>

            <div class="col-md-4">
                <label for="format" class="form-label">Filtrer par format :</label>
                <select name="format" id="format" class="form-select">
                    <option value="">Tous formats</option>
                    <option value="application/pdf" {{ format == 'application/pdf' ? 'selected' : '' }}>PDF</option>
                    <option value="image/jpeg" {{ format == 'image/jpeg' ? 'selected' : '' }}>JPEG</option>
                    <option value="image/png" {{ format == 'image/png' ? 'selected' : '' }}>PNG</option>
                </select>
            </div>

            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-dark w-100">
                    <i class="fas fa-filter"></i> Filtrer
                </button>
            </div>
        </form>

        <!-- Tableau des fichiers -->
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>
                    <a href="{{ path('app_file_index', { 'orderBy': 'id', 'direction': direction == 'ASC' ? 'DESC' : 'ASC', 'name': name, 'format': format }) }}">
                        Identifiant <i class="fas fa-sort"></i>
                    </a>
                </th>
                <th>
                    <a href="{{ path('app_file_index', { 'orderBy': 'fileName', 'direction': direction == 'ASC' ? 'DESC' : 'ASC', 'name': name, 'format': format }) }}">
                        Nom du fichier <i class="fas fa-sort"></i>
                    </a>
                </th>
                <th>
                    <a href="{{ path('app_file_index', { 'orderBy': 'size', 'direction': direction == 'ASC' ? 'DESC' : 'ASC', 'name': name, 'format': format }) }}">
                        Taille du fichier <i class="fas fa-sort"></i>
                    </a>
                </th>
                <th>
                    <a href="{{ path('app_file_index', { 'orderBy': 'uploadDate', 'direction': direction == 'ASC' ? 'DESC' : 'ASC', 'name': name, 'format': format }) }}">
                        Date de téléchargement <i class="fas fa-sort"></i>
                    </a>
                </th>
                <th>Type de fichier</th>
                <th>Chemin du fichier</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for file in files %}
                <tr>
                    <td>{{ file.id }}</td>
                    <td>{{ file.fileName }}</td>
                    <td>{{ file.size / 1024 / 1024 }} MB</td>
                    <td>{{ file.uploadDate ? file.uploadDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ file.type }}</td>
                    <td>{{ file.path }}</td>
                    <td>
                        <a href="{{ path('app_file_show', {'id': file.id}) }}" class="btn btn-outline-secondary btn-sm w-100 mb-1">Voir</a>
                        <a href="{{ path('app_file_edit', {'id': file.id}) }}" class="btn btn-outline-primary btn-sm w-100">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">Aucun résultat trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <!-- Liens supplémentaires -->
        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_file_new') }}" class="btn btn-outline-success">Télécharger un nouveau fichier</a>
            <a href="{{ path('app_file_stats') }}" class="btn btn-outline-dark">Voir les statistiques</a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Inclure FontAwesome pour les icônes -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
{% endblock %}
