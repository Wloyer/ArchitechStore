{% extends 'base.html.twig' %}

{% block title %}File{% endblock %}

{% block body %}
    <h1>File</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ file.id }}</td>
            </tr>
            <tr>
                <th>File Name</th>
                <td>{{ file.fileName }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ file.size / 1024 / 1024 }} MB</td>
            </tr>
            <tr>
                <th>Upload Date</th>
                <td>{{ file.uploadDate ? file.uploadDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ file.type }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ file.path }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_file_index') }}">back to list</a>

    <a href="{{ path('app_file_edit', {'id': file.id}) }}">edit</a>

    {{ include('file/_delete_form.html.twig') }}
{% endblock %}
