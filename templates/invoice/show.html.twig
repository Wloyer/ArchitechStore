{% extends 'base.html.twig' %}

{% block title %}Invoice{% endblock %}

{% block body %}
    <h1>Invoice</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ invoice.id }}</td>
            </tr>
            <tr>
                <th>InvoiceDate</th>
                <td>{{ invoice.InvoiceDate ? invoice.InvoiceDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>AmountWithoutTax</th>
                <td>{{ invoice.amountWithoutTax }}</td>
            </tr>
            <tr>
                <th>TaxAmount</th>
                <td>{{ invoice.taxAmount }}</td>
            </tr>
            <tr>
                <th>TotalAmount</th>
                <td>{{ invoice.totalAmount }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_invoice_index') }}">back to list</a>

    <a href="{{ path('app_invoice_edit', {'id': invoice.id}) }}">edit</a>

    {{ include('invoice/_delete_form.html.twig') }}
{% endblock %}
