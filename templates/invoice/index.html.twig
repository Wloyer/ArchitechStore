{% extends 'base.html.twig' %}

{% block title %}Invoice index{% endblock %}

{% block body %}
    <h1>Vos factures</h1>

    <table>
    <thead>
        <tr>
            <th>Facture N°</th>
            <th>Date</th>
            <th>Montant HT</th>
            <th>Taxe</th>
            <th>Montant TTC</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for invoice in invoices %}
        <tr>
            <td>{{ invoice.id }}</td>
            <td>{{ invoice.InvoiceDate|date('d/m/Y') }}</td>
            <td>{{ invoice.amountWithoutTax }} €</td>
            <td>{{ invoice.taxAmount }} %</td>
            <td>{{ invoice.totalAmount }} €</td>
            <td>
                <a href="{{ path('app_invoice_download', {id: invoice.id}) }}">Télécharger la facture</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>


