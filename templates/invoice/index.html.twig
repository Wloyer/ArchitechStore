{% extends 'base.html.twig' %}

{% block title %}Vos factures{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Vos factures</h1>

        <!-- Table des factures -->
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                <tr>
                    <th scope="col">Facture N°</th>
                    <th scope="col">Date</th>
                    <th scope="col">Montant HT</th>
                    <th scope="col">Taxe</th>
                    <th scope="col">Montant TTC</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for invoice in invoices %}
                    <tr>
                        <td>{{ invoice.id }}</td>
                        <td>{{ invoice.InvoiceDate|date('d/m/Y') }}</td>
                        <td>{{ invoice.amountWithoutTax }} €</td>
                        <td>{{ invoice.taxAmount }} %</td>
                        <td>{{ invoice.totalAmount }} €</td>
                        <td>
                            <a href="{{ path('app_invoice_download', {id: invoice.id}) }}" class="btn btn-primary btn-sm">
                                Télécharger
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Aucune facture disponible</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Bouton pour retourner à l'accueil ou ajouter d'autres actions -->
        <div class="text-center mt-4">
            <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour à l'accueil</a>
        </div>
    </div>
{% endblock %}

