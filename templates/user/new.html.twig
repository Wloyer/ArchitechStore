        <h1 class="text-center mb-4">Créer un nouvel utilisateur</h1>

        <!-- Formulaire de création dans une carte -->
        <div class="card mb-4">
            <div class="card-body">
                {{ include('user/_form.html.twig', {'button_label': 'Créer l\'utilisateur'}) }}
            </div>
        </div>

        <!-- Bouton de retour à la liste -->
        <div class="text-center mt-4">
            <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary">Retour à la liste</a>
        </div>
    </div>
{% endblock %}
