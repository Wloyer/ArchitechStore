{# templates/user/edit_profile.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Modifier mon profil</h1>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_row(form.firstName) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_row(form.lastName) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_row(form.email) }}
            </div>
            <div class="col-md-6 mb-3">
                <label for="password-field">Mot de passe</label>
                {{ form_widget(form.password, { 'attr': { 'class': 'form-control', 'id': 'password-field' } }) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_row(form.phone_number) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_row(form.address) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_row(form.zipCode) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_row(form.City) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_row(form.Country) }}
            </div>


        <!-- Boutons d'action -->
        <div class="d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-primary mx-2 w-25">Enregistrer</button>
            <a href="{{ path('app_user_profile') }}" class="btn btn-secondary mx-2 w-25 text-center">Retour Ã  la liste</a>
        </div>

        {{ form_end(form) }}
            </div>
        </div>


{% endblock %}
