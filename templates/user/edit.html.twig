{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Modifier l'utilisateur</h1>

        <!-- Formulaire d'édition de l'utilisateur -->
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_row(form.firstName) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_row(form.lastName) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_row(form.email) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_row(form.password) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_row(form.phone_number) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_row(form.address) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_row(form.zipCode) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_row(form.City) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_row(form.Country) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_row(form.totalStorageSpace) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_row(form.storageLimit) }}
            </div>
        </div>

        <!-- Champ des rôles -->
        <div class="mb-3">
            <label class="form-label">Rôles</label>
            <div class="form-check">
                {{ form_widget(form.roles) }}
            </div>
        </div>

        <!-- Boutons d'action -->
        <div class="d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-primary mx-2 w-25">Enregistrer</button>
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary mx-2 w-25 text-center">Retour à la liste</a>
        </div>

        {{ form_end(form) }}

        <!-- Formulaire de suppression avec bouton plus large -->
        <div class="d-flex justify-content-center mt-4">
            <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');" class="w-50">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                <button class="btn btn-danger w-100">Supprimer</button>
            </form>
        </div>
    </div>
{% endblock %}